<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
            <ImageView
        	android:id="@+id/teamimg2"
       	 	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:src="@drawable/ic_launcher" />
            
            <TextView
	        android:id="@+id/playername"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="4"
	        android:textSize="25dp"
	        android:text="Takımlar" />
            
            
   		</LinearLayout>
   		
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
            <ImageView
        	android:id="@+id/goalCountimg"
       	 	android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="7dp"
        	android:src="@drawable/soccer" />
            
            <TextView
	        android:id="@+id/goalCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="Takımlar" />
            
            <ImageView
        	android:id="@+id/lineupCountimg"
       	 	android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="7dp"
        	android:src="@drawable/lineup" />
            
            <TextView
	        android:id="@+id/lineupCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="Takımlar" />
   		</LinearLayout>
   		
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
            <ImageView
        	android:id="@+id/yellowimg"
       	 	android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="7dp"
        	android:src="@drawable/yellow_card" />
            
            <TextView
	        android:id="@+id/yellowCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="Takımlar" />
            
            <ImageView
        	android:id="@+id/redimg"
       	 	android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="7dp"
        	android:src="@drawable/red_card" />
            
            <TextView
	        android:id="@+id/redCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="Takımlar" />
   		</LinearLayout>
   		
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
            <TextView
                android:id="@+id/age_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Yaş:"
                android:textSize="14dp" />
            
            <TextView
	        android:id="@+id/ageCount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="-" />
            
            <TextView
                android:id="@+id/cntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="Ülke:"
                android:textSize="14dp" />
            
            <TextView
	        android:id="@+id/countryView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="-" />
   		</LinearLayout>
   		
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
            <TextView
                android:id="@+id/kit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Numara:"
                android:textSize="14dp" />
            
            <TextView
	        android:id="@+id/kitNum"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="-" />
            
            <TextView
                android:id="@+id/pst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Pozisyon:"
                android:textSize="14dp" />
            
            <TextView
	        android:id="@+id/positionView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="12dp"
	        android:layout_weight="4"
	        android:textSize="14dp"
	        android:text="-" />
   		</LinearLayout>
    
</LinearLayout>